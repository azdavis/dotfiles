#!/usr/bin/env zsh

source "$HOME/.config/misc/base"

cd "$HOME/.config/pkg"

brew update
brew upgrade
brew bundle --verbose
brew bundle cleanup --force
brew cask cleanup --force
brew cleanup --force
brew prune
brew doctor || true
brew cask doctor || true

gem install bundle
bundle install
bundle update

npm install -g $(cat Npmfile)

tlmgr update --self
tlmgr update --all
tlmgr install $(cat Tlmgrfile)
