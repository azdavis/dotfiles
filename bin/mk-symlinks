#!/bin/sh

set -eu

panic() {
  echo "$1" >&2
  exit 1
}

if [ "$#" -ne 0 ]; then
  panic "usage: $0"
fi

symlink() {
  if [ -e "$2" ]; then
    printf 'rm %s [y/n]? ' "$2"
    read ans
    if [ "$ans" != y ]; then
      return
    fi
  fi
  rm -rf "$2"
  mkdir -p "$(dirname "$2")"
  ln -s "$HOME/dotfiles/$1" "$2"
}

touch "$HOME/.hushlogin"
chmod 600 "$HOME/.hushlogin"

symlink etc/zshrc.sh "$HOME/.zshrc"

symlink git/config "$HOME/.gitconfig"
symlink git/ignore "$HOME/.gitignore"

symlink mpv/input.conf "$HOME/.config/mpv/input.conf"
symlink mpv/mpv.conf "$HOME/.config/mpv/mpv.conf"

vscode="$HOME/Library/Application Support/Code/User"
symlink vscode/keybindings.json "$vscode/keybindings.json"
symlink vscode/settings.json "$vscode/settings.json"
