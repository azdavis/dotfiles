#!/bin/sh

set -eu

panic() {
  echo "$1" >&2
  exit 1
}

if [ "$#" -ne 0 ]; then
  panic "usage: $0"
fi

symlink() {
  if [ -e "$2" ]; then
    printf 'rm %s [y/n]? ' "$2"
    read ans
    if [ "$ans" != y ]; then
      return
    fi
  fi
  rm -rf "$2"
  mkdir -p "$(dirname "$2")"
  ln -s "$1" "$2"
}

touch "$HOME/.hushlogin"
chmod 600 "$HOME/.hushlogin"

symlink "$HOME/dotfiles/etc/zshrc.sh" "$HOME/.zshrc"

symlink "$HOME/dotfiles/git/config" "$HOME/.gitconfig"
symlink "$HOME/dotfiles/git/ignore" "$HOME/.gitignore"

symlink "$HOME/dotfiles/mpv/input.conf" "$HOME/.config/mpv/input.conf"
symlink "$HOME/dotfiles/mpv/mpv.conf" "$HOME/.config/mpv/mpv.conf"

vscode="$HOME/Library/Application Support/Code/User"
symlink "$HOME/dotfiles/vscode/keybindings.json" "$vscode/keybindings.json"
symlink "$HOME/dotfiles/vscode/settings.json" "$vscode/settings.json"
