#!/bin/sh

. "$HOME/.config/lib/base.sh"

cd

"$HOME/.config/bin/rm-ds-store" .

if [ -e Applications ] \
&& [ "$(find Applications -not -name .localized | wc -l)" -eq 1 ]; then
    rm -rv Applications
fi

rm -rfv \
    .bash_history \
    .bash_sessions \
    .bundle \
    .cache \
    .config/gnome-session \
    .config/gtk-2.0 \
    .config/gtk-3.0 \
    .config/nautilus \
    .config/update-notifier \
    .config/upstart \
    .elm \
    .gem \
    .ghc \
    .lldb \
    .nano \
    .node-gyp \
    .node_repl_history \
    .npm \
    .oracle_jre_usage \
    .python_history \
    .sh_history \
    .viminfo
