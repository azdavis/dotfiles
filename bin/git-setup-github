#!/usr/bin/env sh

source "$HOME/.config/etc/base.sh"

printf "token: "
read token

username="$(git config --global user.name)"
email="$(git config --global user.email)"

git credential-osxkeychain erase <<EOS
host=github.com
protocol=https
EOS
git credential-osxkeychain store <<EOS
host=github.com
protocol=https
password=$token
username=$username
EOS
