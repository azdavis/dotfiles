#!/bin/sh

set -eu
. "$HOME/.config/lib/abort.sh"

cd "$HOME/.config/sublime-text-3/Packages/User"

alias patch="git apply theme/patch/less-color.patch"
if patch --check > /dev/null 2>&1; then
    echo "switching to less color"
    patch
elif patch --reverse --check > /dev/null 2>&1; then
    echo "switching to more color"
    patch --reverse
else
    abort "patch does not apply in either direction"
fi
