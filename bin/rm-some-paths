#!/bin/sh

set -eu

panic() {
    echo "$1" >&2
    exit 1
}

if [ "$#" -ne 0 ]; then
    panic "usage: $(basename "$0")"
fi

cd

rm -rf \
    .bash_history \
    .bash_sessions \
    .config/Code/Backups \
    .config/Code/Cache \
    .config/Code/CachedData \
    .config/Code/CachedExtensions \
    .config/Code/GPUCache \
    .config/Code/logs \
    .config/Code/storage.json \
    .config/sublime-text-3/Cache \
    .config/sublime-text-3/Cache \
    .config/sublime-text-3/Local/Auto\ Save\ Session.sublime_session \
    .config/sublime-text-3/Local/Session.sublime_session \
    .config/sublime-text-3/Packages/User/oscrypto-ca-bundle.crt \
    .config/sublime-text-3/Packages/User/Package\ Control.cache \
    .config/sublime-text-3/Packages/User/Package\ Control.last-run \
    .config/sublime-text-3/Packages/User/Package\ Control.merged-ca-bundle \
    .config/sublime-text-3/Packages/User/Package\ Control.user-ca-bundle \
    .gdb_history \
    .idris/repl/history \
    .node_repl_history \
    .oracle_jre_usage \
    .python_history \
    .sh_history \
    .sqlite_history \
    .viminfo \
    .zcompdump

find . -name .DS_Store -delete >/dev/null 2>&1 || true
