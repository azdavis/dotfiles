#!/usr/bin/env sh

. "$HOME/.config/etc/base.sh"

formula="$(brew --repo)/Library/Taps/homebrew/homebrew-core/Formula"
wd="$HOME/.config/pkg"

brew update

cd "$formula"
git apply "$wd/patch"/*
cd "$wd"

brew bundle --verbose

cd "$formula"
git checkout .
cd "$wd"

brew bundle cleanup --force
brew cask cleanup
brew cleanup
brew prune

brew doctor

tlmgr update --self
tlmgr update --all
tlmgr install $(cat tlmgrfile)

npm update -g
