#!/usr/bin/env sh

. "$HOME/.config/etc/base.sh"

wd="$HOME/.config/pkg"
formula="$(brew --repo)/Library/Taps/homebrew/homebrew-core/Formula"

brew update

cd "$formula"
git apply "$wd/patch"/*
cd "$wd"

brew bundle

cd "$formula"
git checkout .
cd "$wd"

brew bundle cleanup --force
brew cask cleanup --force
brew cleanup --force
brew prune

brew doctor

tlmgr update --self
tlmgr update --all
tlmgr install $(cat tlmgrfile)

npm update -g
