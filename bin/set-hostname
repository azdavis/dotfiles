#!/usr/bin/env sh

. "$HOME/.config/etc/base.sh"

printf "hostname: "
read host_name

scutil --set ComputerName "$host_name"
scutil --set HostName "$host_name"
scutil --set LocalHostName "$host_name"
defaults write \
    "/Library/Preferences/safe_systemConfiguration/com.apple.smb.server" \
    NetBIOSName -string "$host_name"
dscacheutil -flushcache
