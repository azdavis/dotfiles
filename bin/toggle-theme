#!/bin/sh -eu

. ~/.config/lib/panic.sh

if [ $# -ne 0 ]; then
	panic "usage: $(basename "$0")"
fi

cd ~/.config

p="theme/dark.patch"
t=""
d=""
if git apply --check "$p" 2> /dev/null; then
	t="dark"
	d=""
elif git apply --check --reverse "$p" 2> /dev/null; then
	t="light"
	d="--reverse"
else
	panic "patch does not apply in either direction"
fi

git apply $d "$p"
printf "\033]50;SetProfile=$t\a"
