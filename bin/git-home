#!/bin/sh

. "$XDG_CONFIG_HOME/lib/_base.sh"

git rev-parse

remote=""
if [ $# -eq 0 ]; then
    remote="origin"
elif [ $# -eq 1 ]; then
    remote="$1"
else
    abort "usage: $(basename "$0") [<remote>]"
fi

if ! url="$(git config remote.$remote.url)"; then
    abort "could not get url for remote '$remote'"
fi

open "$url"
