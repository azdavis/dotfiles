#!/bin/sh

set -eu
. "$HOME/.config/lib/abort.sh"

if [ $# -ne 0 ]; then
	abort "usage: $(basename "$0")"
fi

cd "$HOME/.config"

if [ \
	"$(curl \
		-H "Accept: application/vnd.github.chitauri-preview+sha" \
		-H "If-None-Match: \"$(git rev-parse origin/master)\"" \
		-s \
		-o /dev/null \
		-w "%{http_code}" \
		"https://api.github.com/repos/azdavis/dotfiles/commits/master" \
	)" -ne 304 \
]; then
	git fetch -q origin master
fi

if git merge-base --is-ancestor origin/master @; then
	echo "already up-to-date"
	exit
fi

if ! git rebase origin/master; then
	abort "cd to '$HOME/.config' to resolve this error"
fi

"$HOME/.config/bin/do-home"
