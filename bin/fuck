#!/bin/sh

. "$HOME/.config/lib/base.sh"

usage() {
    echo "usage: $(basename "$0") [-frv] <file>..."
    exit 1
}

f=""
r=false
v=""
while getopts frv opt; do
    case "$opt" in
    (f) f="-f" ;;
    (r) r=true ;;
    (v) v="-v" ;;
    (?) usage ;;
    esac
done
shift "$(expr "$OPTIND" - 1)"

if [ $# -eq 0 ]; then
    usage
fi

if $r; then
    find "$@" -type f -exec shred $f $v -zn 8 {} \;
    rm -r $f $v "$@"
else
    shred $f $v -zun 8 "$@"
fi
