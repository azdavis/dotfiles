#!/usr/bin/env sh

. "$HOME/.config/lib/base.sh"
. "$HOME/.config/lib/abort.sh"

f=""
r=false
v=""
while getopts frv opt; do
    case "$opt" in
    (f) f="-f" ;;
    (r) r=true ;;
    (v) v="-v" ;;
    (*) exit 1 ;;
    esac
done
shift $((OPTIND-1))

[ $# -eq 0 ] \
    && abort "usage: $(basename "$0") [-frv] <file>..."

if $r; then
    find "$@" -type f -exec shred $f $v -zn 8 {} \;
    rm -r $f $v "$@"
else
    shred $f $v -zun 8 "$@"
fi
