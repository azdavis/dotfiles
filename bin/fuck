#!/usr/bin/env sh

. "$HOME/.config/etc/base.sh"

f=""
r=false
v=""

while getopts frv opt; do
    case "$opt" in
    (f) f="-f" ;;
    (r) r=true ;;
    (v) v="-v" ;;
    (*) exit 1 ;;
    esac
done
shift $((OPTIND-1))

[ $# -eq 0 ] && abort "missing operand"

if $r; then
    find $@ -type f -exec shred $f $v -zun 8 {} \;
    rm -rf $v $@
else
    shred $f $v -zun 8 $@
fi
