#!/usr/bin/env sh

. "$HOME/.config/etc/base.sh"

wd=".config/home"
cd "$HOME/$wd"

touch "$HOME/.hushlogin" "$HOME/.netrc"
chmod 600 "$HOME/.hushlogin" "$HOME/.netrc"

for x in *; do
    dst="$HOME/.$x"
    [ -L "$dst" ] && rm "$dst"
    [ -e "$dst" ] && rm -ri "$dst"
    [ -e "$dst" ] && continue
    ln -s "$wd/$x" "$dst"
done
