#!/usr/bin/env sh

. "$HOME/.config/etc/base.sh"

wd=".config/home"
cd "$HOME/$wd"

touch "$HOME/.hushlogin" "$HOME/.netrc"
chmod 600 "$HOME/.hushlogin" "$HOME/.netrc"

for x in *; do
    dst="$HOME/.$x"
    if [ -e "$dst" ] && ! confirm "remove $dst"; then
        continue
    fi
    rm -rf "$dst"
    ln -s "$wd/$x" "$dst"
done
