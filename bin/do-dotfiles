#!/usr/bin/env sh

. "$HOME/.config/etc/base.sh"

wd=".config/home"
cd "$HOME/$wd"

touch "$HOME/.hushlogin" "$HOME/.netrc"
chmod 600 "$HOME/.hushlogin" "$HOME/.netrc"
for f in $(find *); do
    dst="$HOME/.$f"
    if [ -d "$f" ]; then
        mkdir -p "$dst"
    else
        ln -sfn "$wd/$f" "$dst"
    fi
done
