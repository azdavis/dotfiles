#!/bin/sh

. "$XDG_CONFIG_HOME/lib/_base.sh"

if [ $# -ne 0 ]; then
    abort "usage: $(basename "$0")"
fi

cd

"$XDG_CONFIG_HOME/bin/rm-ds-stores" .

if [ -e Applications ] \
&& [ "$(find Applications -not -name .localized | wc -l)" -eq 1 ]; then
    rm -r Applications
fi

rm -rf \
    .bash_history \
    .bash_sessions \
    .bundle \
    .cache \
    .config/gnome-session \
    .config/gtk-2.0 \
    .config/gtk-3.0 \
    .config/nautilus \
    .config/update-notifier \
    .config/upstart \
    .elm \
    .gem \
    .ghc \
    .lldb \
    .nano \
    .node-gyp \
    .node_repl_history \
    .npm \
    .oracle_jre_usage \
    .python_history \
    .sh_history \
    .viminfo
