#!/bin/sh

set -eu
. ~/.config/lib/panic.sh

show_help() {
cat <<EOF
usage: $(basename "$0") [options]

options:
	-h
		show this help
	-v
		explain what is being done
EOF
}

usage() {
	show_help 1>&2
	exit 1
}

f=""
r=false
v=""
while getopts "hv" opt; do
	case "$opt" in
	(v) v="-v" ;;
	(*) usage ;;
	esac
done
shift $((OPTIND - 1))

if [ $# -ne 0 ]; then
	usage
fi

~/.config/bin/rm-ds-stores $v ~

rm -rf $v \
	~/.bash_history \
	~/.bash_sessions \
	~/.bundle \
	~/.cache \
	~/.config/gnome-session \
	~/.config/gtk-2.0 \
	~/.config/gtk-3.0 \
	~/.config/nautilus \
	~/.config/update-notifier \
	~/.config/upstart \
	~/.elm \
	~/.gdb_history \
	~/.gem \
	~/.ghc \
	~/.idris/repl/history \
	~/.lldb \
	~/.mplayer \
	~/.nano \
	~/.node-gyp \
	~/.node_repl_history \
	~/.npm \
	~/.oracle_jre_usage \
	~/.python_history \
	~/.sh_history \
	~/.sqlite_history \
	~/.viminfo \
	~/.zcompdump
