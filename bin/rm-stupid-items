#!/bin/sh

set -eu
. "$HOME/.config/lib/abort.sh"

if [ $# -ne 0 ]; then
	abort "usage: $(basename "$0")"
fi

"$HOME/.config/bin/rm-ds-stores" "$HOME"

rm -rf \
	"$HOME/.bash_history" \
	"$HOME/.bash_sessions" \
	"$HOME/.bundle" \
	"$HOME/.cache" \
	"$HOME/.config/gnome-session" \
	"$HOME/.config/gtk-2.0" \
	"$HOME/.config/gtk-3.0" \
	"$HOME/.config/nautilus" \
	"$HOME/.config/update-notifier" \
	"$HOME/.config/upstart" \
	"$HOME/.elm" \
	"$HOME/.gem" \
	"$HOME/.ghc" \
	"$HOME/.lldb" \
	"$HOME/.nano" \
	"$HOME/.node-gyp" \
	"$HOME/.node_repl_history" \
	"$HOME/.npm" \
	"$HOME/.oracle_jre_usage" \
	"$HOME/.python_history" \
	"$HOME/.sh_history" \
	"$HOME/.sqlite_history" \
	"$HOME/.viminfo"
