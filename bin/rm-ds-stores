#!/bin/sh

set -eu
. ~/.config/lib/panic.sh

show_help() {
cat <<EOF
usage: $(basename "$0") [options] <path>...

options:
	-h
		show this help
	-v
		explain what is being done
EOF
}

usage() {
	show_help 1>&2
	exit 1
}

f=""
r=false
v=""
while getopts "hv" opt; do
	case "$opt" in
	(v) v="-v" ;;
	(*) usage ;;
	esac
done
shift $((OPTIND - 1))

if [ $# -eq 0 ]; then
	usage
fi

find "$@" -name .DS_Store -exec rm $v {} \; 2> /dev/null || true
