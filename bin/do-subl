#!/usr/bin/env sh

. "$HOME/.config/lib/base.sh"
. "$HOME/.config/lib/abort.sh"
. "$HOME/.config/lib/symlink.sh"

pgrep -f "Sublime Text" > /dev/null \
    && abort "sublime text must not be running"

support="$HOME/Library/Application Support/Sublime Text 3"
rm -rf "$support/Cache"
rm -rf "$support/Local/Auto Save Session.sublime_session"
rm -rf "$support/Local/Session.sublime_session"

config="$HOME/.config/subl"
rm -rf "$config/oscrypto-ca-bundle.crt"
rm -rf "$config/Package Control.cache"
rm -rf "$config/Package Control.last-run"
rm -rf "$config/Package Control.merged-ca-bundle"
rm -rf "$config/Package Control.user-ca-bundle"

symlink "$config" "$support/Packages/User"
