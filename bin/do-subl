#!/usr/bin/env sh

. "$HOME/.config/lib/base.sh"
. "$HOME/.config/lib/abort.sh"
. "$HOME/.config/lib/symlink.sh"

pgrep -f "Sublime Text" > /dev/null \
    && abort "sublime text must not be running"

config="$HOME/.config/sublime-text"
symlink "$config" "$HOME/Library/Application Support/Sublime Text 3"
rm -rf "$config/Cache"
rm -rf "$config/Index"
rm -rf "$config/Local/Auto Save Session.sublime_session"
rm -rf "$config/Local/Session.sublime_session"
rm -rf "$config/Packages/User/oscrypto-ca-bundle.crt"
rm -rf "$config/Packages/User/Package Control.cache"
rm -rf "$config/Packages/User/Package Control.last-run"
rm -rf "$config/Packages/User/Package Control.merged-ca-bundle"
rm -rf "$config/Packages/User/Package Control.user-ca-bundle"
