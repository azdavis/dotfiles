#!/usr/bin/env sh

source "$HOME/.config/etc/base.sh"

if pgrep -f "Sublime Text" > /dev/null; then
    abort "sublime text must not be running"
fi

support="$HOME/Library/Application Support/Sublime Text 3"
mkdir -p "$support/Packages"

symlink "$HOME/.config/subl" "$support/Packages/User"
remove "$HOME/.config/subl/Package Control.cache"
remove "$support/Cache"
remove "$support/Local/Session.sublime_session"
remove "$support/Local/Auto Save Session.sublime_session"

printf "install package control [yn]? "
read x
[ "$x" = y ] && open "https://packagecontrol.io/installation"; true
