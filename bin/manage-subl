#!/usr/bin/env sh

source "$HOME/.config/etc/base.sh"

if pgrep -f "Sublime Text" > /dev/null; then
    abort "sublime text must not be running"
fi

support="$HOME/Library/Application Support/Sublime Text 3"
mkdir -p "$support/Packages"

ln -sfn "$HOME/.config/subl" "$support/Packages/User"
rm -rf "$HOME/.config/subl/Package Control.cache"
rm -rf "$support/Cache"
rm -f "$support/Local/Session.sublime_session"
rm -f "$support/Local/Auto Save Session.sublime_session"

pkctrl="$support/Installed Packages/0_package_control_loader.sublime-package"
if [ ! -e "$pkctrl" ]; then
    open "https://packagecontrol.io/installation"
fi
