#!/usr/bin/env zsh

source "$HOME/.config/misc/base.sh" || exit 1

cd "$HOME/.config"

interval='86400'
current="$(date +%s)"
last="$(cat 'misc/update.log' 2> /dev/null || echo 0)"
difference="$(expr "$current" - "$last")"

[[ "$difference" -lt "$interval" ]] && exit 0
echo 'updating ~/.config...'
util/update

true
