[advice]
	detachedHead = false
[alias]
	git = !exec git
	log-graph = log --all --graph --oneline
	praise = blame
	show-full = show --format=fuller
	unstash = stash pop
[commit]
	verbose = 1
[core]
	editor = subl -w
	eol = lf
	pager = less -FRSXqx4
	quotePath = false
	untrackedCache = true
[credential]
	helper = store
[diff]
	algorithm = histogram
[init]
	templateDir = ~/.config/git-template
[log]
	date = iso8601
	decorate = true
[merge]
	conflictStyle = diff3
	ff = only
[pull]
	rebase = preserve
[push]
	default = simple
[status]
	branch = true
	short = true
[transfer]
	fsckObjects = true
