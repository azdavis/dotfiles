[advice]
	detachedHead = false
[alias]
	fixup = commit --amend --no-edit
	praise = blame
	unstash = stash pop
	new-branch = "!f() { \
		git checkout -b $1 && \
		git config branch.$1.remote origin && \
		git config branch.$1.merge refs/heads/$1; \
	}; f"
[commit]
	verbose = 1
[core]
	editor = code -w
	eol = lf
	pager = less -FRSXqx4
	quotePath = false
	untrackedCache = true
[diff]
	algorithm = histogram
[init]
	templateDir = ~/.config/git-template
[log]
	date = iso8601
	decorate = true
[merge]
	conflictStyle = diff3
	ff = only
[pull]
	rebase = preserve
[push]
	default = simple
[status]
	branch = true
	short = true
	showUntrackedFiles = all
[transfer]
	fsckObjects = true
[url "https://"]
	insteadOf = git://
[user]
	email = ariel.z.davis@icloud.com
	name = Ariel Davis
