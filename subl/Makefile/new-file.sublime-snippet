	<content><![CDATA[
MAKEFLAGS += -rR
SHELL := sh -euo pipefail
Q ?= &> /dev/null
THINGC ?=
THINGFLAGS ?=

.PHONY: clean

%: %.th
	\$(THINGC) \$(THINGFLAGS) -o \$@ \$<

clean:
	rm -f *.o
	for f in *; do file -b "\$\$f" | grep -q exec && rm "\$\$f"; done; true

]]></content>
