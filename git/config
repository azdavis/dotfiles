[advice]
  detachedHead = false
  addEmptyPathspec = false
[alias]
  amend = commit --amend --reset-author
  count-commits = rev-list --count HEAD
  fixup = commit --amend --no-edit --reset-author
  ls-untracked = ls-files -o --directory
  praise = blame
  unstash = stash pop
[commit]
  verbose = 1
[core]
  commitGraph = true
  editor = code -w
  eol = lf
  pager = delta --dark
  quotePath = false
  untrackedCache = true
[credential]
  helper = osxkeychain
[diff]
  algorithm = histogram
  renameLimit = 4096
  renames = copy
[fetch]
  prune = true
[init]
  templateDir = ~/.config/git/template
[interactive]
  diffFilter = delta --color-only --dark
[log]
  date = iso8601
  decorate = short
[merge]
  conflictStyle = diff3
[pull]
  rebase = merges
[push]
  default = simple
[stash]
  showPatch = true
  showStat = false
[status]
  branch = true
  short = true
[url "https://"]
  insteadOf = git://
