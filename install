#!/usr/bin/env sh

wrapper() {
    cd
    if [ -e .config ]; then
        printf "remove existing .config? "
        read x < /dev/tty
        if [ "$x" = y ]; then
            rm -rf .config
        else
            exit 0
        fi
    fi
    git clone -q https://github.com/azdavis/config .config
    chmod 700 .config
    printf "remove existing dotfiles? "
    read x < /dev/tty
    if [ "$x" = y ]; then
        .config/bin/do-dotfiles
    fi
}

wrapper
