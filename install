#!/usr/bin/env sh

confirm() {
    local x
    printf "\e[33mconfirm:\e[0m $1? "
    read x < /dev/tty
    return $([ "$x" = y ])
}

main() {
    cd
    if [ -e .config ]; then
        if confirm "remove $HOME/.config"; then
            rm -rf .config
        else
            exit 0
        fi
    fi
    git clone -q https://github.com/azdavis/config .config
    chmod 700 .config
    .config/bin/do-dotfiles
}

main
